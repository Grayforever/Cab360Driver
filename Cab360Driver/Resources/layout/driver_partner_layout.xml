
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/driver_partner_root"
    android:background="@android:color/white">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true"
        android:id="@+id/partner_appbar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driver_partner_toolbar"
            android:background="@android:color/white"
            style="@style/Widget.MaterialComponents.Toolbar"
            app:navigationIcon="@drawable/quantum_ic_arrow_back_grey600_24"
        />
   </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drv_part_intro_txt"
                android:text="@string/drv_partner_header"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentTop="true"
            />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/partner_radioGroup"
                android:layout_below="@+id/drv_part_intro_txt"
                android:background="@drawable/partner_radio_border">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/partner_head_txt"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp" 
                    android:checked="true"
                    android:textColor="@drawable/radio_txt_selector"
                    android:button="@android:color/transparent"
                    android:textAllCaps="true"
                    android:background="@drawable/partner_radio_start"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/driver_head_txt"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp" 
                    android:textColor="@drawable/radio_txt_selector"
                    android:button="@android:color/transparent"
                    android:textAllCaps="true"
                    android:background="@drawable/partner_radio_end"
                    />
            </RadioGroup>>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_bottomsheet_dg"
                android:elevation="6dp"
                android:layout_below="@+id/partner_radioGroup"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textColor="@android:color/white"
                    android:text="@string/continue_txt"
                    android:textStyle="bold"
                    android:id="@+id/drv_part_cnt_btn"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-light"
                    app:rippleColor="@color/colorPrimary"
                    style="@style/AppTheme.PrimaryButtonColored"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                />

            </LinearLayout>
        </RelativeLayout>>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>