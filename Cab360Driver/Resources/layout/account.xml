
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account_appbar"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_toolbar"
            android:background="@android:color/white"
            style="@style/Widget.MaterialComponents.Toolbar"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!--Top Profile Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:background="@drawable/circularbordersolid">

                <Refractored.Controls.CircleImageView        
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_plchldr"
                    android:id="@+id/iv_pp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Berlinda Ababio"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:id="@+id/username_tv"
                    android:layout_below="@id/iv_pp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"
                    android:textSize="16sp" 
                    android:id="@+id/user_role_tv"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/username_tv"
                    android:layout_centerHorizontal="true"
                />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_role_tv"
                    android:orientation="horizontal">

                    <RelativeLayout          
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/trips_iv1"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:padding="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentStart="true"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/tickinsidecircle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/trip_summary_tv1"
                            android:text="654"
                            android:layout_toEndOf="@+id/trips_iv1"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_toEndOf="@+id/trips_iv1"
                            android:layout_below="@+id/trip_summary_tv1"
                            android:text="Trips"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout          
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/ratings_iv1"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:padding="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentStart="true"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/abc_ic_star_black_36dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating_summary_tv1"
                            android:text="654"
                            android:layout_toEndOf="@+id/ratings_iv1"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_toEndOf="@+id/ratings_iv1"
                            android:layout_below="@+id/rating_summary_tv1"
                            android:text="Rating"
                            android:textSize="16sp" />
                    </RelativeLayout>

                        

                </LinearLayout>
            </RelativeLayout>

            <!--Option Bar-->

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/circle_border_outline"
                android:id="@+id/radioGroup_account"
                android:layout_margin="16dp"
                android:elevation="2dp">


                <RadioButton
                    android:id="@+id/radioUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="profile"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp" 
                    android:checked="true"
                    android:textColor="@drawable/radio_txt_selector"
                    android:button="@android:color/transparent"
                    android:textAllCaps="true"
                    android:background="@drawable/radio_selector_start"
                />

                    

                <RadioButton
                    android:id="@+id/radioExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="compliments"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:button="@android:color/transparent"
                    android:textColor="@drawable/radio_txt_selector"
                    android:textAllCaps="true"
                    android:background="@drawable/radio_selector"
                />

                    

                <RadioButton
                    android:id="@+id/radioReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="notifications"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_txt_selector"
                    android:background="@drawable/radio_selector_end"
                    android:button="@android:color/transparent"
                />

            </RadioGroup>


            <include
                layout="@layout/account_tab1"
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include
                layout="@layout/account_tab2"
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include
                layout="@layout/account_tab3"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            

        </LinearLayout>

        

    </androidx.core.widget.NestedScrollView>
    
    
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>