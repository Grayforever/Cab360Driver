<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notifs_itemlist_root"
    app:cardCornerRadius="5dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/notif_item_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/notif_item_header"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/abc_action_mode_done"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/notif_item_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notif_item_img"
            app:layout_constraintBottom_toTopOf="@+id/notif_item_datetime"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Loren ipsum dolor sit amet quand sit macrosoieo"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/notif_item_datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif_item_header"
            app:layout_constraintStart_toEndOf="@+id/notif_item_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="lorem kkdkm dkfk"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
