<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/new_ride_layout"
    tools:ignore="HardcodedText"
    android:padding="16dp"
    android:clipToPadding="false">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_ride_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/anim_bell_av"
        android:text="New ride request"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/anim_bell_av"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_ride_header"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="bell.json"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/new_ride_from_cv"
        app:layout_constraintTop_toBottomOf="@+id/new_ride_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/new_ride_frm_iv"
                android:src="@drawable/redball"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/new_ride_frm_tv"
                app:layout_constraintStart_toEndOf="@+id/new_ride_frm_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Dansoman"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginStart="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/new_ride_to_cv"
        app:layout_constraintTop_toBottomOf="@+id/new_ride_from_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/new_ride_to_iv"
                android:src="@drawable/greenball"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/new_ride_to_tv"
                app:layout_constraintStart_toEndOf="@+id/new_ride_to_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Kasoa new market"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginStart="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:id="@+id/toolbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_ride_to_cv"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/box1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/box2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/box1_iview"
                android:src="@drawable/ic_spped"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/box1_tv"
                android:text="34km"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/box2"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/box1"
            app:layout_constraintEnd_toStartOf="@+id/box3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/box2_iview"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/box2_tv"
                android:text="22 mins"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/box3"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/box2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/box3_iview"
                android:src="@drawable/ic_cedi"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/box3_tv"
                android:text="56gh"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/new_ride_acceptBtn"
        app:layout_constraintTop_toBottomOf="@+id/toolbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="Accept ride"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_ride_slide"
        app:layout_constraintTop_toBottomOf="@+id/new_ride_acceptBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Slide down to reject"
        android:textAppearance="?attr/textAppearanceBody1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>