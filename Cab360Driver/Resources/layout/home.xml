
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
	android:background="@android:color/white"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
		    android:id="@+id/map"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    class="com.google.android.gms.maps.SupportMapFragment"
	    />

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:background="@drawable/temperature_background"
            android:id="@+id/frameLayout_online"
            android:layout_gravity="right|top"
            android:elevation="8dp"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <Refractored.Controls.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/user_img"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorAccent"
                />

                <TextSwitcher
                    android:id="@+id/ts_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/user_img"
                />
            </RelativeLayout>
        </FrameLayout>

	    <ImageView
		    android:id="@+id/centerMarker"
		    android:layout_height="48dp"
		    android:layout_width="48dp"
		    android:layout_gravity="center"
		    android:visibility="invisible"
		    android:src="@drawable/ic_pin"
	    />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/bg_bottomsheet_dg"
            android:layout_gravity="bottom"
            android:id="@+id/linear_home1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="26dp"
            android:elevation="2dp"
            android:paddingTop="4dp"
            android:visibility="visible">

            <Refractored.Controls.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/rider_iv"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_account_plchldr"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"
            />

            <TextView
                android:id="@+id/riderNameText"
                android:text="Janet Jackson"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/rider_iv"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:ellipsize="marquee"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rider_details_tv"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/rider_iv"
                android:layout_below="@+id/riderNameText"
                android:text="Something must kill a man"
                android:textColor="@color/colorAccent"
            />
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorDisabled"
            android:layout_alignParentBottom="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tripButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Arrived PickUp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:background="@drawable/outline_btn_bg" 
                android:layout_margin="8dp"
                app:strokeWidth="2dp"
                app:rippleColor="@color/colorAccent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textAppearance="?android:attr/textAppearanceButton"
                />
        </FrameLayout>
        

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_anchor="@+id/linear_home1"
        app:layout_anchorGravity="top"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelTripButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cancel"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:rippleColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            />
                
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/callRiderButton"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/cancelTripButton"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_call"
            app:fabSize="mini"
            app:backgroundTint="?android:attr/colorPrimary"
            app:elevation="4dp"
            app:rippleColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
        />

        <com.google.android.material.floatingactionbutton.FloatingActionButton                                         
            android:id="@+id/navigateButton"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/callRiderButton"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_navigate"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:rippleColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
        />
            
            
            
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>