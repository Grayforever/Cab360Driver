<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/driver_onboarding_root"
    android:orientation="vertical">
    
    <FrameLayout            
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorAccent">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/onbd_welcome_txt"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:text="Welcome to the driver app"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:id="@+id/onbd_linear1"
            android:layout_centerInParent="true">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/onbd_signin_btn"
                android:text="sign in"
                android:layout_weight="1"
                android:background="@drawable/outline_btn_bg"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
            />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/onbd_signup_btn"
                android:text="Register"
                android:layout_weight="1"
                android:background="@drawable/primary_btn_bg"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                
            />

        </LinearLayout>

        
    </RelativeLayout>
</LinearLayout>


