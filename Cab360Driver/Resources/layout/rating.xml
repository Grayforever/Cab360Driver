<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/ratings_toolbar"
        android:elevation="4dp"
    />

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/ratings_toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_tv"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="You haven't been rated yet"
                    android:maxLines="2"
                    android:textAlignment="gravity"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:drawableEnd="@drawable/abc_ic_star_black_16dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_desc_tv"
                    android:textSize="16sp"
                    android:layout_below="@+id/ratings_tv"
                    android:layout_centerHorizontal="true"
                    android:text="No ratings"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                />

                <TableLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_table1"
                    android:layout_below="@+id/ratings_desc_tv">

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingEnd="16dp"
                            android:textColor="@android:color/black"
                            android:drawableEnd="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/five_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_five_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="4"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingEnd="16dp"
                            android:textColor="@android:color/black"
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/four_star_progress"
                            android:progress="0"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_four_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingEnd="16dp"
                            android:textColor="@android:color/black"
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/three_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_three_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingEnd="16dp"
                            android:textColor="@android:color/black"
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/two_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_two_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingEnd="16dp"
                            android:textColor="@android:color/black"
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/one_star_proogress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_one_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="end"
                        />
                    </TableRow>
            
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_ratings_details_tv1"
                    android:layout_below="@+id/ratings_table1"
                    android:text="View details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:textSize="16sp"
                    android:foreground="?android:attr/selectableItemBackground"
                />

            </RelativeLayout>

            <RelativeLayout          
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
        
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No recent rider feedback"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/no_recents_tv1"
                    android:textColor="@android:color/black"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is where you'll see feedback from riders who rate you under 5 stars."
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_below="@+id/no_recents_tv1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:layout_toStartOf="@+id/review_dummy_iv1"
                />

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_review1"
                    android:id="@+id/review_dummy_iv1"
                    android:layout_marginStart="8dp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <Refractored.Controls.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/rater_profile_iv1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_plchldr"
                    android:layout_marginEnd="8dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_name_tv1"
                    android:layout_toEndOf="@+id/rater_profile_iv1"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_rating_tv1"
                    android:layout_below="@+id/rater_name_tv1"
                    android:layout_toEndOf="@+id/rater_profile_iv1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_duration_tv"
                    android:text="0d"
                    android:layout_alignParentEnd="true"
                    android:textColor="#FFCF66"
                />

            </RelativeLayout>

        </LinearLayout>

    

    </ScrollView>

    
</RelativeLayout>