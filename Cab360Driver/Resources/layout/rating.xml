<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">  
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/appbar_main"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_tv"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="You haven't been rated yet"
                    android:maxLines="2"
                    android:textAlignment="gravity"
                    android:ellipsize="end"
                    android:drawableEnd="@drawable/abc_ic_star_black_16dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_desc_tv"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/ratings_tv"
                    android:layout_centerHorizontal="true"
                    android:text="No ratings"
                    
                    android:textColor="@color/colorAccent"
                />

                <TableLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratings_table1"
                    android:layout_below="@+id/ratings_desc_tv">

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="5"
                            android:textSize="16sp"
                            
                            android:paddingEnd="16dp"
        
                            android:drawableEnd="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/five_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_five_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
        
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="4"
                            android:textSize="16sp"
                            
                            android:paddingEnd="16dp"
        
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/four_star_progress"
                            android:progress="0"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_four_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
        
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="3"
                            android:textSize="16sp"
                            
                            android:paddingEnd="16dp"
        
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/three_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_three_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
        
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="2"
                            android:textSize="16sp"
                            
                            android:paddingEnd="16dp"
        
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/two_star_progress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_two_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
        
                            android:gravity="end"
                        />
                    </TableRow>

                    <TableRow
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="1"
                            android:textSize="16sp"
                            
                            android:paddingEnd="16dp"
        
                            android:drawableRight="@drawable/ic_star_small"/>
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/one_star_proogress"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/star_one_tv"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textSize="16sp"
        
                            android:gravity="end"
                        />
                    </TableRow>
            
                </TableLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_ratings_details_btn"
                    android:layout_below="@+id/ratings_table1"
                    android:text="View details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                />

            </RelativeLayout>

            <RelativeLayout          
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/review_dummy_iv1"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No recent rider feedback"
                        
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        
                        android:id="@+id/no_recents_tv1"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This is where you'll see feedback from riders who rate you under 5 stars."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        
                    />

                </LinearLayout>

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_review1"
                    android:id="@+id/review_dummy_iv1"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/icon_content_description"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <Refractored.Controls.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/rater_profile_iv1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_plchldr"
                    android:layout_marginEnd="8dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_name_tv1"
                    android:layout_toEndOf="@+id/rater_profile_iv1"
                    android:layout_alignParentTop="true"
                    

                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_rating_tv1"
                    android:layout_below="@+id/rater_name_tv1"
                    android:layout_toEndOf="@+id/rater_profile_iv1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_duration_tv"
                    android:text="0d"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorIvory"
                />

            </RelativeLayout>

        </LinearLayout>

    

   </androidx.core.widget.NestedScrollView>

    
</androidx.coordinatorlayout.widget.CoordinatorLayout>