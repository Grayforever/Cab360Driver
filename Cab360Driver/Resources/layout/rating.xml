<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">  
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/appbar_main"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rater_cv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratings_tv"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="You haven't been rated yet"
                        android:maxLines="2"
                        android:textAlignment="gravity"
                        android:ellipsize="end"
                        android:drawableEnd="@drawable/abc_ic_star_black_16dp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratings_desc_tv"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_below="@+id/ratings_tv"
                        android:layout_centerHorizontal="true"
                        android:text="No ratings"
                    
                        android:textColor="@color/colorAccent"
                    />

                    <TableLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratings_table1"
                        android:layout_below="@+id/ratings_desc_tv">

                        <TableRow
                            android:padding="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="5"
                                android:textSize="16sp"
                            
                                android:paddingEnd="16dp"
        
                                android:drawableEnd="@drawable/ic_star_small"/>
                            <ProgressBar
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/five_star_progress"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_five_tv"
                                android:layout_weight="0.5"
                                android:text="0"
                                android:textSize="16sp"
        
                                android:gravity="end"
                            />
                        </TableRow>

                        <TableRow
                            android:padding="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="4"
                                android:textSize="16sp"
                            
                                android:paddingEnd="16dp"
        
                                android:drawableRight="@drawable/ic_star_small"/>
                            <ProgressBar
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/four_star_progress"
                                android:progress="0"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_four_tv"
                                android:layout_weight="0.5"
                                android:text="0"
                                android:textSize="16sp"
        
                                android:gravity="end"
                            />
                        </TableRow>

                        <TableRow
                            android:padding="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="3"
                                android:textSize="16sp"
                            
                                android:paddingEnd="16dp"
        
                                android:drawableRight="@drawable/ic_star_small"/>
                            <ProgressBar
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/three_star_progress"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_three_tv"
                                android:layout_weight="0.5"
                                android:text="0"
                                android:textSize="16sp"
        
                                android:gravity="end"
                            />
                        </TableRow>

                        <TableRow
                            android:padding="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="2"
                                android:textSize="16sp"
                            
                                android:paddingEnd="16dp"
        
                                android:drawableRight="@drawable/ic_star_small"/>
                            <ProgressBar
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/two_star_progress"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_two_tv"
                                android:layout_weight="0.5"
                                android:text="0"
                                android:textSize="16sp"
        
                                android:gravity="end"
                            />
                        </TableRow>

                        <TableRow
                            android:padding="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="1"
                                android:textSize="16sp"
                            
                                android:paddingEnd="16dp"
        
                                android:drawableRight="@drawable/ic_star_small"/>
                            <ProgressBar
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/one_star_proogress"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_one_tv"
                                android:layout_weight="0.5"
                                android:text="0"
                                android:textSize="16sp"
        
                                android:gravity="end"
                            />
                        </TableRow>
            
                    </TableLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_ratings_details_btn"
                        android:layout_below="@+id/ratings_table1"
                        android:text="View details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    />

                    </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/ratings_recycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rater_cv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>