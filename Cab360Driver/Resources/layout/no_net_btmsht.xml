
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clipToPadding="false"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:id="@+id/no_net_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_no_net"
        android:padding="8dp"
        />

    <ProgressBar
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:id="@+id/no_net_prgs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:indeterminate="true"
        android:padding="8dp"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/no_net_hdr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_net_img"
        android:text="@string/no_net_header1"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:textAllCaps="true"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/no_net_sbttl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_net_hdr"
        android:text="@string/no_net_sub1"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/no_net_btn"
        app:layout_constraintTop_toBottomOf="@+id/no_net_sbttl"
        app:layout_constraintEnd_toStartOf="@+id/no_net_btn_opn_stn"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/no_net_retry1"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/no_net_btn_opn_stn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/no_net_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_net_sbttl"
        android:text="@string/no_net_opn_sttngs"
        android:textSize="16sp"
        app:strokeWidth="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>