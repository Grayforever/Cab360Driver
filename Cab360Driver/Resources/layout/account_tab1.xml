<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personalinfo_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--About Me Card-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/circularbordersolid"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me"                    
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/about_header_tv"
            android:textColor="@android:color/black"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#FFCF66"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:id="@+id/edit_tv1"
            android:layout_alignParentEnd="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:hint="description"
            android:layout_alignParentBottom="true"
            
        />

    </RelativeLayout>

    <!--Contact Details-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circularbordersolid"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab1_edit1"
            android:text="Edit"
            android:textColor="#FFCF66"
            android:layout_marginEnd="10dp"
            android:textSize="14sp" 
            android:layout_alignParentEnd="true"

        />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab1_table1"
            android:layout_below="@+id/tab1_edit1">

            <TableRow
                android:padding="8dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:layout_weight="0.2"
                    android:tint="@color/colorAccent"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/userphone_tv"
                    android:textSize="16sp"
                    android:text="hello world" 
                    android:layout_weight="0.8"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    />
            </TableRow>

            <TableRow
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:layout_weight="0.2"
                    android:tint="@color/colorAccent"
                    android:src="@android:drawable/ic_dialog_email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/useremail_tv"
                    android:textSize="16sp"
                    android:text="hello world"
                    android:layout_weight="0.8"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                />
            </TableRow>

            <TableRow
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:padding="10dp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_location" 
                    android:layout_weight="0.2"
                />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/usercity_tv"
                    android:textSize="16sp"
                    android:text="hello world"
                    android:layout_weight="0.8"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                />
            </TableRow>

        </TableLayout>

        
    </RelativeLayout>

    
</LinearLayout>

