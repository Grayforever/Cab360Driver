<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/earnings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/earn_appbar"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/earnings_toolbar"
            android:background="?android:attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Toolbar"
            app:layout_scrollFlags="enterAlways|snap">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/circle_border_outline"
                android:id="@+id/radioGroup_earnings"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Summary"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp" 
                    android:checked="true"
                    android:textColor="@drawable/radio_txt_selector"
                    android:button="@android:color/transparent"
                    android:textAllCaps="true"
                    android:background="@drawable/radio_selector_start"
                />

                <RadioButton
                    android:id="@+id/radioHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="History"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_txt_selector"
                    android:background="@drawable/radio_selector_end"
                    android:button="@android:color/transparent"
                />

            </RadioGroup>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/earn_appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/earn_sum_tab1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
