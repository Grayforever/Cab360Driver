<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true"
        android:id="@+id/part_vehi_appbar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/part_vehi_toolbar"
            android:background="@android:color/white"
        />
   </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/part_vehi_intro_txt"
                android:text="Tell us more about your car"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentTop="true"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/part_vehi_l1"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/part_vehi_intro_txt"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/brand_ac_tv"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:hint="Car brand"
                        
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/model_ac_tv"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:hint="Model"
                        
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/part_vehi_l2"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/part_vehi_l1"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/year_ac_tv"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:hint="Year"
                        
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/state_ac_tv"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:hint="Condition"
                        
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/part_vehi_l3"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/part_vehi_l2"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/color_ac_tv"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:hint="Color"
                        
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:id="@+id/reg_no_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Registration number"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/curr_user_til"
                android:layout_below="@+id/part_vehi_l3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current owner"
                    android:fontFamily="sans-serif-light"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pls_tick_tv"
                android:layout_below="@+id/curr_user_til"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please tick the appropriate box"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/part_grid1"
                android:layout_below="@+id/pls_tick_tv"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:columnCount="2">
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Roadworthy"
                    app:useMaterialThemeColors="true"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/chk_road"
                    />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Insurance"
                    android:layout_columnWeight="1"
                    app:useMaterialThemeColors="true"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/chk_insur"
                    />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Clean interior"
                    android:layout_columnWeight="1"
                    app:useMaterialThemeColors="true"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/chk_inte"
                    />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fire extinguisher"
                    android:layout_columnWeight="1"
                    app:useMaterialThemeColors="true"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/chk_fire"
                    />

            </GridLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/part_cont_btn"
                android:layout_alignParentBottom="true"
                android:text="Continue"
                android:textColor="@drawable/btn_txt_clr_tggl"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:enabled="false"
                />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
